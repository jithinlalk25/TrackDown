<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="italic"
        android:typeface="serif"
        android:textColor="#FF4A36CB" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solution is in the box"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:typeface="serif"
            android:id="@+id/sol"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/card">
    <ImageView
        android:src="@drawable/box"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        />
        <ImageView
            android:id="@+id/c"
            android:src="@drawable/c"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:src="@drawable/box1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"

            />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_alignParentBottom="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="5dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:typeface="monospace"
                android:id="@+id/box_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="&lt;&gt; QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890!@#$%^&amp;*(),./;'[]-=_+{}:?&quot;"
                android:focusedByDefault="false"
                android:hint="Solution"
                android:maxLength="20"
                android:lines="1"
                android:textSize="13sp" />

        </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.FloatingActionButton
                android:layout_gravity="center"
                android:id="@+id/fab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/go"
                android:scaleType="center"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ProgressBar
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>